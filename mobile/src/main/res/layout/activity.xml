<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activity"
    android:weightSum="1"
    android:background="#FFEFDB">

    <LinearLayout
        android:background="#FFEFDB"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_weight="0.43">

        <Button
            android:textSize="20dp"
            android:background="#FFEFDB"
            android:id="@+id/btn_monkey"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="monkey"
            android:onClick="gotoMonkey"/>

        <Button
            android:textSize="20dp"
            android:background="#FFEFDB"
            android:id="@+id/btn_uiautomator"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="uiautomator"
            android:onClick="gotoUiautomator"
            />



            <Button
                android:textSize="20dp"
                android:background="#FFEFDB"
                android:layout_gravity="center"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="SETTING"
                android:onClick="gotosetting" />


        <Button
            android:textSize="20dp"
            android:background="#FFEFDB"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="test"
            android:onClick="test1"
            />
        <Button
            android:textSize="20dp"
            android:background="#FFEFDB"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="performance"
            android:onClick="performance"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ScriptTool v1.0"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.03" />




</LinearLayout>
